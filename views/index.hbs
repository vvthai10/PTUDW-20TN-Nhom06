<div style="max-width: 1100px;">
  <!--TODO TAG-->
  <div class="trend">
    <span class="dot" style="max-width: 1100px; margin-right: 20px;">
      <i
        class="fa-solid fa-arrow-trend-up fa-lg icon--trend"
        style="margin-left: 7px;margin-top: 7px;"
      ></i>
    </span>
    <div class="tag" style="font-family: serif">
      {{#each tags}}
        <a href="/tag?tagId={{id}}">
          <p class="tag__item">#{{name}}</p>
        </a>
      {{/each}}
    </div>
    <div class="local__temp__weather" id="local__temp__weather">
    </div>
  </div>
  <!--TODO Bài viết nổi bật nhất tuần(3-4 bài)-->
  <div class="content">
    <div class="row" style="max-height: 500px;">
      <div class="col-8">
        <div class="content__new__main" style="height: 500px;">
          <div class="card">
            <img
              src="assets/images/news/news_search/new_4.png"
              class="card-img-top"
              alt="..."
            />
            <div class="card-body">
              <p class="card-text"><small class="text-muted">Xã hội 5:34pm
                  16-03-23</small></p>
              <a
                style="cursor: pointer; display: block;"
                href="/article?articleId=1"
              >
                <h5 class="card-title">hello world</h5>
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-4">
        {{! <div class="content__news__left" id="content__news__left" style="cursor: pointer;"></div> }}
        <div class="content__news__left">
          {{#each popularArticles}}
            <div
              class="card card__news__left--extend"
              style="display: block; margin-bottom: 5px;"
            >
              <img src="{{imgCover}}" class="card-img-top" alt="..." />
              <div class="card-body">
                <a
                  style="cursor: pointer; display: block;"
                  href="/article?articleId={{id}}"
                >
                  <span
                    style="font-size: 16px; line-height: 16px; font-weight:700"
                  >{{name}}</span>
                </a>
                <div class="category-time">
                  <p class="card-text"><small
                      class="text-muted"
                    >{{description}}</small></p>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
    <div
      class="content__news__right"
      id="content__news__right"
      style="cursor: pointer; display: none;"
    ></div>

  </div>
  <!--TODO Bài viết được xem nhiều nhất mọi chuyên mục (10 bài)-->
  <div class="popular__week__news">
    <h4>Các bài viết được xem nhiều nhất</h4>
    <hr />
    <div
      id="carousel__popular__week__news"
      class="carousel carousel-dark slide"
      data-bs-ride="false"
    >
      <div class="carousel-inner">
        {{#each rightArticles}}
          {{#each _main_item}}
            <div class="carousel-item active">
              <div class="card-group">
                {{#each _item}}
                  <div class="card card__popular__news--extend">
                    <img
                      src="{{imgCover}}"
                      class="card-img-top"
                      alt="..."
                      style="width: 100%; max-height: 250px;"
                    />
                    <div class="card-body">
                      <a
                        style="cursor: pointer; display: block;"
                        href="/article?articleId={{id}}"
                      >
                        <h5 class="card-title">{{description}}</h5>
                      </a>
                      <p class="card-text"><small class="text-muted">Xã hội
                          5:34pm 16-03-23</small></p>
                    </div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/each}}
          {{#each _items}}
            <div class="carousel-item">
              <div class="card-group">
                {{#each _item}}
                  <div class="card card__popular__news--extend">
                    <img
                      src="{{imgCover}}"
                      class="card-img-top"
                      alt="..."
                      style="width: 100%; max-height: 250px;"
                    />
                    <div class="card-body">
                      <a
                        style="cursor: pointer; display: block;"
                        href="/article?articleId={{id}}"
                      >
                        <h5 class="card-title">{{description}}</h5>
                      </a>
                      <p class="card-text"><small class="text-muted">Xã hội
                          5:34pm 16-03-23</small></p>
                    </div>
                  </div>
                {{/each}}
              </div>
            </div>
          {{/each}}
        {{/each}}
      </div>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#carousel__popular__week__news"
        data-bs-slide="prev"
        style="width: 30px; height: 30px px; border-radius: 50%;"
      >
        <span
          class="carousel-control-prev-icon"
          aria-hidden="true"
          style="width: 30px; height: 30px px;  border-radius: 50%;"
        ></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#carousel__popular__week__news"
        data-bs-slide="next"
        style="width: 30px; height: 30px px; border-radius: 50%;"
      >
        <span
          class="carousel-control-next-icon"
          aria-hidden="true"
          style="width: 30px; height: 30px px;  border-radius: 50%;"
        ></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
