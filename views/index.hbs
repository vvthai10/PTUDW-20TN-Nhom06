<div style="max-width: 1100px;">
  <!--TODO TAG-->
  <div class="trend">
    <span class="dot" style="max-width: 1100px; margin-right: 20px;">
      <i class="fa-solid fa-arrow-trend-up fa-lg icon--trend" style="margin-left: 7px;margin-top: 7px;"></i>
    </span>
    <div class="tag" style="font-family: serif">
      {{#each tags}}
          <a href="/tag?tagId={{id}}">
            <span class="tag__item">{{name}}</span>
          </a>
      {{/each}}
    </div>
    <div class="local__temp__weather" id="local__temp__weather">
    </div>
  </div>
  <!--TODO Bài viết nổi bật nhất tuần(3-4 bài)-->
  <div class="content">
    <div class="row" style="max-height: 500px;">
      <div class="col-8">
        <div class="content__new__main" style="height: 500px;">
          {{#with mainArticle}}
          <div class="card">
            <img src="{{imgCover}}" class="card-img-top" alt="..." />
            <div class="card-body">
              {{#each SubCategories}}
              <a style="cursor: pointer; display: block;" href="/subCategory?subCategoryId={{id}}"><span style="padding: 5px;
    width: 70px;
    text-align: center;
    border-radius: 20px;
    background: var(--primary-color);
    border: none;
    font-size: 13px;
    font-weight: 400;
    color: white;
    line-height: 100%;">{{name}}</span></a>

              {{/each}}
              <p style="padding: 10px 0 0 0px;" class="card-text"><small class="text-muted"> {{updatedAt}}</small></p>
              <a style="cursor: pointer; display: block;" href="/article?articleId={{id}}">
                <h5 class="card-title">{{name}}</h5>
              </a>
            </div>
          </div>
          {{/with}}
        </div>
      </div>
      <div class="col-4">
        {{! <div class="content__news__left" id="content__news__left" style="cursor: pointer;"></div> }}
        <div class="content__news__left">
          {{#each popularArticles}}
          <div class="card card__news__left--extend" style="display: block; margin-bottom: 5px;">
            <img src="{{imgCover}}" class="card-img-top" alt="..." />
            <div class="card-body">
              {{#each SubCategories}}
              <a style="cursor: pointer; display: block;" href="/subCategory?subCategoryId={{id}}"><span style="padding: 5px;
    width: 70px;
    text-align: center;
    border-radius: 20px;
    background: var(--primary-color);
    border: none;
    font-size: 13px;
    font-weight: 400;
    color: white;
    line-height: 100%;">{{name}}</span></a>

              {{/each}}
              <p style="padding: 10px 0 0 0px;" class="card-text"><small class="text-muted"> {{updatedAt}}</small></p>

              <a style="cursor: pointer; display: block;" href="/article?articleId={{id}}"><span
                  style="font-size: 16px; line-height: 16px; font-weight:700">{{name}}</span></a>
              {{!-- <div class="category-time">
                <p class="card-text"><small class="text-muted">{{description}}</small></p>
              </div> --}}
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="content__news__right" id="content__news__right" style="cursor: pointer; display: none;"></div>

  </div>
