{{#if hasAlert}}
  {{> alert}}
{{/if}}
<div class="form__container">
  <span class="form__name">Đăng ký</span>
  <form action="/users/register" method="post" id="formRegister">
    <div class="form__input-box">
      <input
        type="text"
        class="form__input"
        placeholder="Họ và tên"
        name="name"
        required
      />
    </div>
    <div class="form__input-box">
      <input
        id="YOUR_FORM_ID"
        type="text"
        class="form__input"
        placeholder="Email"
        name="email"
        required
        pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
      />
    </div>
    <div class="form__input-box">
      <input
        type="password"
        class="form__input"
        placeholder="Mật khẩu"
        name="password"
        required
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
        title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
        onchange="checkPasswordConfirm('formRegister')"
      />
    </div>
    <div class="form__input-box">
      <input
        type="password"
        class="form__input"
        placeholder="Xác nhận mật khẩu"
        name="confirmPassword"
        required
        onkeyup="checkPasswordConfirm('formRegister')"
      />
    </div>
    <input type="hidden" name="reqUrl" value="{{reqUrl}}" />
    <div id="recaptchaError"></div>
    {{! <button type="submit" class="form__btn">Đăng ký</button> }}

    <button
      type="submit"
      class="g-recaptcha form__btn"
      data-sitekey="6LcN8-cmAAAAANYFIEhiHZHOi7qrMCaui3TuwQGE"
      data-callback="onSubmitRegister"
    >Đăng ký</button>
  </form>

  {{!-- {{#if registerMessage}}
    <div class="col md-12">
      <div class="p-3 mt-3 alert alert-warning">{{{registerMessage}}}</div>
    </div>
  {{/if}} --}}

  <span class="form__sign-in-up-signin">Đã có tài khoản?<a
      href="/users/login" style="font-size: 14px; font-weight: 500;"
    >Đăng nhập</a></span>
</div>