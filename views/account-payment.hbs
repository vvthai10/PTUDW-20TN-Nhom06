<!--MAIN-->
<div
  style="
            display: flex;
            min-width: 1100px;
            align-items: center;
            flex-direction: column;
            justify-content: center;
          "
>
  <div class="box__user_pages">
    <div class="row" style="min-width: 100%;">
      <div class="col-4">
        {{> sidebar-account}}
      </div>
      <div class="col-8">
        <div class="user__info">
          <span class="title">Quản lý chi tiêu
            <hr />
          </span>
          {{#if expremiums.length}}
            <ul>
              {{#each expremiums}}
                <li style="font-size: 14px; line-height: 26px; border-bottom: 2px solid #3399cc; margin-bottom: 10px;">
                    <span style="width: 20%">{{createdAt}}</span>
                    <span>Bạn vừa đăng kí premium gói {{#ifEquals type "1"}}trải nghiệm{{/ifEquals}} {{#ifEquals type "2"}}cơ bản{{/ifEquals}} {{#ifEquals type "3"}}cao cấp{{/ifEquals}}</span>
                </li>
              {{/each}}
            </ul>
          {{else}}
            <span>Bạn chưa đăng kí dịch vụ Premium</span>
            <a
              href="/premium"
              style="font-size: 1.2rem; color: #ea5114"
            >Trải nghiệp ngay</a> 
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
<!--MAIN-->