<div style="max-width: 1100px; " id="abcdefgh">
    <div style="display: flex;
    align-items: center;
    border-bottom: 1px solid rgba(81, 81, 81, 0.7);
    margin-bottom: 15px;">
        {{#with category}}
            <a href="/category?categoryId={{id}}" style="    
            margin: 0;
            padding: 0;
            font-size: 100%;
            vertical-align: baseline;
            background: transparent;
            text-decoration: none;
            color: #888;
            cursor: pointer;
            font-size: 16px;">{{name}}</a> 
        {{/with}}
        <i class="bi bi-chevron-right" style="font-size: 14px; margin: 0px 5px;"></i>
        {{#with subCategory}}
            <a href="/subCategory?subCategoryId={{id}}" style="    
            margin: 0;
            padding: 0;
            font-size: 100%;
            vertical-align: baseline;
            background: transparent;
            text-decoration: none;
            color: #888;
            cursor: pointer;
            font-size: 16px;">{{name}}</a> 
        {{/with}}
    </div>
    <div
      class="tag"
      style="font-family: serif; display: flex; flex-wrap: wrap;"
    >
      {{#each detailTags}}
        <a
          href="/tag?tagId={{id}}"
          style="display: block; white-space: nowrap;"
        >
          <span class="tag__item" style="margin-left: 0; margin-right: 20px">{{name}}</span>
        </a>
      {{/each}}
    </div>
    {{#with article}}
        <div class="container__new">
            <h4 style="font-size: 30px;">{{name}}
            </h4>
            <div class="author__time">
                <p class="author">{{author}}</p>
                <p class="time">{{approve}}</p>
                <div class="like__comment">
                    {{!-- <div class="like">
                        <button><i class="fa-solid fa-thumbs-up"></i></button>
                        <p>6</p>
                    </div> --}}
                    <div class="comment">
                        <button type="button" data-bs-toggle="modal" data-bs-target="#myModal"><i
                                class="fa-solid fa-comment"></i></button>
                        <p>10</p>

                        <div class="modal" id="myModal" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" style="font-size: 20px; text-color: red;">Bình luận</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body modal--content" id="comment">
                                        {{#each Comments}}
                                        <div class="card__comment">
                                            <div class="personal__img">
                                                <img
                                                    src="https://scontent.fsgn13-3.fna.fbcdn.net/v/t1.6435-9/121172259_691283754825145_668356720972128544_n.jpg?_nc_cat=102&ccb=1-7&_nc_sid=09cbfe&_nc_ohc=GR8cdUy4WOcAX-lAVcu&_nc_ht=scontent.fsgn13-3.fna&oh=00_AfD3KneIO4cr-anMmhkAmzkCRxWo3_8TXbpR9z6gMSSdEg&oe=64BE4AD2"></img>
                                            </div>
                                            <div class="card-body--comment"
                                                style="box-sizing: border-box; margin-left: 10px;">
                                                <p style="font-weight: bold; font-size: 15px;">{{User.name}}</p>
                                                <p class="comment__content" style="font-size: 15px;">{{content}}
                                                </p>
                                                <div class="like__comment">
                                                    <div class="like">
                                                        <button><i class="fa-solid fa-thumbs-up"></i></button>
                                                        <p>6</p>
                                                    </div>
                                                    {{#if User.matched}}
                                                    <div class="comment">
                                                        <button onclick="deleteComment({{User.id}}, {{articleId}})"><i
                                                                class="fa-solid fa-wrench"></i></button>
                                                        <p>Xóa {{userInfo.id}}</p>
                                                    </div>
                                                    {{/if}}
                                                    <div class="like__comment--time">
                                                        <p>{{createdAt}}</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                    <div style="display: flex;">
                                        {{#with commentInfo}}
                                        <div class="header__search-bar">
                                            <input id="post" type="search" class="header__search-input"
                                                placeholder="Viết bình luận..."/>
                                        </div>
                                        <button
                                            onclick="makeComment({{this.userInfo.id}}, document.getElementById('post').value, {{this.articleId}})"
                                            style="font-size: 20px; background-color: red;">Summit</button>
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="comment" style="font-size: 14px; margin: 0 10px;">
                        {{#with premium}}
                        <button onclick="generatePDF('{{role}}')" type="button" data-bs-toggle="modal"><i
                                class="fa-solid fa-print fa-2xl"></i> Tải về</button>
                        {{/with}}
                    </div>
                </div>
            </div>
            <div class="new" style="font-size: 14px; margin-top: 10px">
                <div style="display: flex; flex-direction: column; margin: 8px 0">
                    <img src="{{imgCover}}" alt="background">
                    <span style=" font-size: 20px; font-weight: 500;">{{description}}</span>
                </div>
                {{{content}}}
            </div>
        </div>
        <p style="display: none" id="idofarticle">{{id}}</p>
        <p style="display: none" id="idofarticle">{{id}}</p>
    {{/with}}
    {{#with userInfo}}
        <p style="display: none" id="idofuser">{{id}}</p>
    {{/with}}
