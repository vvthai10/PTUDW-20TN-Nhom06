<script>
    function generatePDF(userRole) {
        if (userRole == 'premium') {
            const element = document.getElementById('content');
            html2pdf().from(element).save();
        }
        else {
            alert("Your acount is not premium! Please purchase to use this advance feature.")
        }
    }

    async function makeComment(userId, comment, articleId) {
        let res = await fetch('/comment', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify({ userId, comment, articleId })
        });

        let json = await res.json();

        if (json.message == 'success') {
            document.getElementById('post').value = "";
            document.getElementById('comment').innerHTML +=
                `<div class="card__comment">
                <div class="personal__img">
                    <img src="../public/assets/images/default.jpg"></img>
                </div>
                <div class="card-body--comment" style="box-sizing: border-box; margin-left: 10px;"> 
                    <p style="font-weight: bold; font-size: 15px;"> ${json.userName} </p>
                    <p class="comment__content" style="font-size: 15px;"> ${json.data.content} 
                    </p>
                    <div class="like__comment">
                        <div class="comment">
                            <button onclick="deleteComment(${json.data.userId},${json.data.articleId})"><i class="fa-solid fa-wrench"></i></button>
                            <p>Xóa</p>
                        </div>
                        <div class="like__comment--time">
                            <p>${json.data.createdAt}</p>
                        </div>
                    </div>
                </div>
            </div>`;
        }
    }

    async function deleteComment(userId, articleId) {
        let res = await fetch('/comment', {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify({ userId, articleId })
        });

        let json = await res.json();

        if (json.message == 'deleted') {
            let comment = document.getElementById('comment');
            comment.innerHTML = "";
            for (let index = 0; index < json.data.length; index++) {
                const item = json.data[index];
                comment.innerHTML +=
                    `<div class="card__comment">
                    <div class="personal__img">
                        <img src="../public/assets/images/default.jpg"></img>
                    </div>
                    <div class="card-body--comment" style="box-sizing: border-box; margin-left: 10px;"> 
                        <p style="font-weight: bold; font-size: 15px;"> ${item.User.name} </p>
                        <p class="comment__content" style="font-size: 15px;"> ${item.content} 
                        </p>
         
                        <div class="like__comment">
                            <div class="comment">
                                <button onclick="deleteComment(${item.User.id}}, ${item.articleId})"><i class="fa-solid fa-wrench"></i></button>
                                <p>Xóa</p>
                            </div>
                            <div class="like__comment--time">
                                <p>${item.createdAt}</p>
                            </div>
                        </div>
                    </div>
                </div>`;
            }
        }
        console.log("delete");

    }
</script>

