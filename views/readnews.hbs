        <div class="popular__week__news">
            <h4>Các bài viết cùng chuyên mục</h4>
            <hr />
            <div
            id="carousel__popular__week__news"
            class="carousel carousel-dark slide"
            data-bs-ride="false"
            >
            <div class="carousel-inner">
                {{#each viewArticlesSame}}
