                            <a
                                style="cursor: pointer; display: block;"
                                href="/article?articleId={{id}}"
                            >
                                <h5 class="card-title">{{name}}</h5>
                            </a>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    </div>
                {{/each}}
                {{#each _items}}
                    <div class="carousel-item">
                    <div class="card-group">
                        {{#each _item}}
                        <div class="card card__popular__news--extend">
                            <img
                            src="{{imgCover}}"
                            class="card-img-top"
                            alt="..."
                            style="width: 100%; max-height: 250px;"
                            />
                            <div class="card-body">
                            {{#each SubCategories}}
                                <a
                                style="cursor: pointer; display: block;"
                                href="/subCategory?subCategoryId={{id}}"
                                ><span
                                    style="padding: 5px;
                                    width: 70px;
                                    text-align: center;
                                    border-radius: 20px;
                                    background: var(--primary-color);
                                    border: none;
                                    font-size: 13px;
                                    font-weight: 400;
                                    color: white;
                                    line-height: 100%;"
